@page "/users"
@using System.Text.Json
@using BlazorAPI.ViewModels

@inject IHttpClientFactory ClientFactory

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<h1>Users</h1>

@if (_userViewModel == null)
{
    <p>loading...</p>
}
else
{
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Street</th>
            <th>Latitude</th>
            <th>Longitude</th>
        </tr>

        @foreach (var user in _userViewModel)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Address.Street</td>
                <td>@user.Address.Geo.Lat</td>
                <td>@user.Address.Geo.Lng</td>
            </tr>
        }


    </table>
}

@code {
    private UserViewModel[] _userViewModel;

    protected override async Task OnInitializedAsync()
    {
        var request = new HttpRequestMessage(HttpMethod.Get, "https://jsonplaceholder.typicode.com/users");

        var client = ClientFactory.CreateClient();

        var response = await client.SendAsync(request);

        var jsonString = await response.Content.ReadAsStringAsync();

        _userViewModel = JsonSerializer.Deserialize<UserViewModel[]>(jsonString);

    }

}
